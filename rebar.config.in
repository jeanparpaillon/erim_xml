% -*- mode: erlang -*-
{erl_opts, [debug_info,
	    {src_dirs, ["src"]},
	    {d, 'HAVE_EXPAT', @HAVE_EXPAT@},
	    {d, 'HAVE_LIBXML2', @HAVE_LIBXML2@},
	    {i, "../include"}
	   ]}.

{require_min_otp_vsn, "R12B"}.

{pre_hooks, 
 [
  {compile, "make -C priv"},
  {compile, "make -C c_src"}
 ]}.

{post_hooks,
 [
  {clean, "make -C priv clean"},
  {clean, "make -C c_src clean"}
 ]
}.

{deps, []}.

%% EDoc options
{edoc_opts, [{subpackages, true},
	     {packages, false}
	    ]}.
